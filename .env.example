# Server Configuration
NODE_ENV=production
PORT=3000
ALLOWED_ORIGINS=https://yourapp.com,exp://192.168.1.100:8081

# NUS NextBus API Credentials (Basic Auth)
NUS_NEXTBUS_API_URL=https://nnextbus.nus.edu.sg
NUS_NEXTBUS_USERNAME=NUSnextbus
NUS_NEXTBUS_PASSWORD=your-password-here

# LTA DataMall API
LTA_API_URL=https://datamall2.mytransport.sg/ltaodataservice
LTA_API_KEY=your-lta-api-key-here

# Google Maps Routes API
GOOGLE_ROUTES_API_URL=https://routes.googleapis.com/directions/v2:computeRoutes
GOOGLE_MAPS_API_KEY=your-google-api-key-here

# Redis Configuration (for caching and rate limiting)
# If not provided, falls back to in-memory cache (not recommended for production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120
RATE_LIMIT_ENABLED=true

# Caching
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300

# Logging
LOG_LEVEL=info
LOG_PRETTY=false
